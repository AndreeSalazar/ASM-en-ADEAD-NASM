# Test: funciones que RECIBEN structs (sin retornar struct)

print "=== Test Funcion con Struct ==="

struct Punto {
    x
    y
}

# Funcion que recibe struct y retorna entero
fn suma_coords(p) {
    return p.x + p.y
}

let p = Punto { x: 100, y: 200 }

print "Punto creado"
print p.x
print p.y

let suma = suma_coords(p)
print "Suma de coordenadas:"
print suma

print "Test completado"


