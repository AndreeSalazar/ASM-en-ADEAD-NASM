# TEST 09: Método Simple (Función que opera sobre struct)
# Objetivo: Simular método que usa datos del struct

print "=== TEST 09: Metodo Simple ==="

struct Contador {
    valor
}

# Simular método: incrementar
fn contador_incrementar(c) {
    let nuevo_valor = c.valor + 1
    return Contador { valor: nuevo_valor }
}

# Simular método: obtener valor
fn contador_get_valor(c) {
    return c.valor
}

# Crear contador
let c = Contador { valor: 10 }

print "Valor inicial:"
print contador_get_valor(c)

# Incrementar
let c2 = contador_incrementar(c)

print "Valor despues de incrementar:"
print contador_get_valor(c2)

print "TEST 09: PASADO"

