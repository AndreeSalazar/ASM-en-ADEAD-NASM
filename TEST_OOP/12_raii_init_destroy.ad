# TEST 12: RAII - Init y Destroy
# Objetivo: Verificar patr칩n de construcci칩n/destrucci칩n

print "=== TEST 12: RAII Init/Destroy ==="

struct Recurso {
    id
    valor
}

# Factory (simula constructor)
fn recurso_crear(id, valor_inicial) {
    print ">>> Recurso creado con ID:"
    print id
    return Recurso { id: id, valor: valor_inicial }
}

# Destructor (debe llamarse manualmente por ahora)
fn recurso_destruir(r) {
    print ">>> Recurso destruido con ID:"
    print r.id
}

# Crear recursos
let r1 = recurso_crear(1, 100)
let r2 = recurso_crear(2, 200)

print "Trabajando con recursos..."
print "Recurso 1 valor:"
print r1.valor
print "Recurso 2 valor:"
print r2.valor

# Destruir (manual - RAII autom치tico pendiente)
recurso_destruir(r1)
recurso_destruir(r2)

print "TEST 12: PASADO"

