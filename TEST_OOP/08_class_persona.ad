# Test 08: Clase Persona
# Ejemplo con strings y múltiples métodos

class Persona {
    fn new(nombre, edad) {
        self.nombre = nombre
        self.edad = edad
    }
    
    fn cumplir_anios(self) {
        self.edad = self.edad + 1
    }
    
    fn es_mayor(self) {
        if self.edad >= 18 {
            return 1
        }
        return 0
    }
    
    fn get_edad(self) {
        return self.edad
    }
}

# Crear personas
let p1 = Persona.new("Juan", 17)
let p2 = Persona.new("Maria", 25)

# Verificar mayoría de edad
print p1.es_mayor()
print p2.es_mayor()

# Cumplir años
p1.cumplir_anios()
print p1.get_edad()
print p1.es_mayor()

# Salida esperada:
# 0
# 1
# 18
# 1

